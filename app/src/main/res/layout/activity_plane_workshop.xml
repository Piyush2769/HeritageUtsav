<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".PlaneWorkshop">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionplane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarplane"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/planeimg"
        android:layout_below="@id/actionplane"
        android:src="@drawable/flying"
        android:transitionName="example_trans"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_below="@id/planeimg"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="Date:03/04/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="Time and Venue: 11AM-1PM | CB 416"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="Organised by: The Flying Club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="Reg. Fee: â‚¹100 per person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="About:A Drone Making Workshop where you will be taught from scratch how to build a drone."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:text="POC: Akash-8582960476|Sayak-8100229697"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:text="Register"
        android:id="@+id/regplane"
        android:layout_margin="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>